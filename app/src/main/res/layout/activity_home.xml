<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1">
    <RelativeLayout

        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#56ABE4"
        >
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="小组信息"/>
        <TextView
            android:textSize="0sp"
            android:text="更多"
            android:layout_marginRight="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:onClick="switch_item"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_title_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/more_operate"/>
    </RelativeLayout>
    <LinearLayout

        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:id="@+id/ll_include_search"
        android:orientation="horizontal">
        <EditText
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/ll_title"
            android:id="@+id/et_search"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_search_bg"
            android:hint="搜索"/>
    </LinearLayout>

<FrameLayout

    android:id="@+id/framelayout"
    android:layout_below="@id/ll_include_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></FrameLayout>
    <LinearLayout
        android:id="@+id/ll_tab"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/ll_bottom_home"
            android:onClick="switch_item"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:background="@drawable/home_on"
                android:onClick="switch_item"
                android:id="@+id/rb_shopping"
                android:button="@null"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_bottom_home"
                android:textColor="#56ABE4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="主页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottom_order"
            android:onClick="switch_item"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:onClick="switch_item"
                android:id="@+id/rb_myorder"
                android:background="@drawable/order_off"
                android:button="@null"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tv_bottom_order"
                android:textColor="#A9B7B7"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"
                />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>